<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView  
	android:id="@+id/Textquestionbefore"
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content" 
    	android:text="请正确回答问题后点击“我醒了”结束闹钟"
    	android:textSize="30dp"
    	android:textColor="#000000" 
    	/>
   	<TextView  
	android:id="@+id/Textquestion"
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content" 
    	android:text=" "
    	android:textSize="20dp"
    	android:textColor="#000000" 
    	/>
   	<TextView  
	android:id="@+id/Textblank"
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content" 
    	android:text=" "
    	android:textSize="40dp"
    	/>
	<TextView  
	android:id="@+id/Textans1"
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content" 
    	android:text=" "
    	android:textSize="20dp"
    	android:textColor="#000000" 
    	/>
	<TextView  
	android:id="@+id/Textblank4"
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content" 
    	android:text=" "
    	android:textSize="10dp"
    	/>
	<TextView  
	android:id="@+id/Textans2"
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content" 
    	android:textSize="20dp"
    	android:textColor="#000000" 
    	android:text=" "
    	/>
	<TextView  
	android:id="@+id/Textblank2"
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content" 
    	android:text=" "
    	android:textSize="80dp"
    	/>
	<TextView  
	android:id="@+id/Textblank3"
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content" 
    	android:text="答案："
    	android:textSize="20dp"
    	/>
	<LinearLayout android:orientation="horizontal"
	  		android:layout_width="fill_parent"
	  		android:layout_height="60dp">
	  	<Button
	    	android:id="@+id/Button_ansA"
	    	android:layout_width="wrap_content"
	    	android:layout_height="60dp"
	    	android:layout_weight="0.5"
	    	android:text=" "
	    	android:textSize="25dp"
    		android:textColor="#FFFFFF" 
	    	android:background="@drawable/shape"
	  	/>
	  	<Button
	    	android:id="@+id/Button_ansB"
	    	android:layout_width="wrap_content"
	    	android:layout_height="60dp"
	    	android:layout_weight="0.5"
	    	android:text=""
	    	android:textSize="25dp"
    		android:textColor="#FFFFFF" 
	    	android:background="@drawable/shape"
	  	/>
	</LinearLayout>>
</LinearLayout>
